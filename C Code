#include <stdio.h>
#include <stdlib.h>

int main()
{
    // define the array
    int arr[5] , h = 0 , min = 0 , max = 0 ;
    // get numbers frim the user
    printf(" please enter your five numbers :   \n");
    for(int i = 0 ; i < 5 ; i++)
    {
        scanf("%d", &arr[i]);
    }
    printf("-----------------------------------------\n");
    // print the number
    printf(" You numbers is :    ");
    for ( int i = 0 ; i < 5 ; i++)
    {
        printf("%d  ", arr[i]);
    }
     printf("\n --------------------------------------\n");
     // we will sort the numbers of the array to get the minimum numbers and the maximum numbers
     for ( int i = 0 ; i < 5 ; i++)
     {
         for (int  j = i+ 1 ; j < 5 ; ++j)
         {
             if (arr[i] > arr[j])
         {
             h = arr[i];
             arr[i]=arr[j];
             arr[j]= h;
         }
         }
     }
     // print the array after sorting
    printf(" You numbers after sorting is :    ");
    for ( int i = 0 ; i < 5 ; i++)
    {
        printf("%d  ", arr[i]);
    }
     printf("\n --------------------------------------\n");
     // take the first 4 number for min
     for ( int i = 0 ; i <=3 ; i++)
     {
         min += arr[i];
     }
     // take the second 4 number for max
     for ( int i = 1 ; i <=4 ; i++)
     {
         max += arr[i];
     }
     // print the result
     printf("%d %d", min,max);
    return 0 ;
}
